<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/container_view"
        android:layout_marginBottom="?actionBarSize"
        android:layout_height="match_parent">
    </FrameLayout>
    <ImageView
        android:layout_width="48dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/id_add"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_add_48dp"
        android:layout_height="48dp"/>
    <View
        android:layout_width="match_parent"
        android:background="#1D000000"
        android:layout_above="@+id/ddd"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/ddd"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_height="?actionBarSize">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/id_home"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/view1"
                android:layout_width="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_home_24dp"
                android:layout_height="36dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/id_revenue_expenditure"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/view2"
                android:layout_width="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_contract_2"
                android:layout_height="36dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"/>
        <RelativeLayout
            android:id="@+id/id_bill"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/view3"
                android:layout_width="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_house_2"
                android:layout_height="36dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/id_statistical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/view4"
                android:layout_width="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_statistical_24dp_2"
                android:layout_height="36dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>